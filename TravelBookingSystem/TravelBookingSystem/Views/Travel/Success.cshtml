@{
    ViewBag.Title = "Booking Successful";
    var booking = ViewBag.Booking as TravelBookingSystem.Models.Booking;
}

@section Styles {
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/travel-packages.css" asp-append-version="true" />
    <style>
        /* Success Page Specific Styles */
        .success-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 2rem 4rem;
            animation: fadeIn 0.8s ease-out;
        }

        .success-card {
            background: var(--card-bg);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: var(--shadow);
            border: 1px solid rgba(255, 255, 255, 0.05);
            position: relative;
        }

            .success-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, var(--neon-green), var(--neon-blue));
            }

        /* Success Icon Animation */
        .success-icon-container {
            text-align: center;
            padding: 3rem 2rem 2rem;
            background: linear-gradient(135deg, rgba(57, 255, 20, 0.1), rgba(0, 212, 255, 0.1));
        }

        .success-icon {
            width: 120px;
            height: 120px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, var(--neon-green), var(--neon-blue));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            animation: successPulse 1.5s ease-out;
            box-shadow: 0 0 40px rgba(57, 255, 20, 0.4);
        }

        @@keyframes successPulse {
            0% {
                transform: scale(0);
                opacity: 0;
            }

            50% {
                transform: scale(1.1);
            }

            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        .success-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--neon-green);
            margin-bottom: 0.5rem;
            animation: fadeInDown 0.8s ease-out 0.3s backwards;
        }

        .success-subtitle {
            font-size: 1.2rem;
            color: var(--text-secondary);
            animation: fadeInUp 0.8s ease-out 0.5s backwards;
        }

        /* Booking Details */
        .booking-details {
            padding: 2.5rem;
        }

        .details-section {
            margin-bottom: 2rem;
        }

        .section-header {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--neon-blue);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .section-header::before {
                content: '📋';
            }

        .details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .detail-item {
            background: rgba(0, 212, 255, 0.05);
            padding: 1.5rem;
            border-radius: 12px;
            border: 1px solid rgba(0, 212, 255, 0.1);
            transition: var(--transition);
        }

            .detail-item:hover {
                background: rgba(0, 212, 255, 0.1);
                border-color: rgba(0, 212, 255, 0.3);
                transform: translateY(-3px);
            }

        .detail-label {
            font-size: 0.85rem;
            color: var(--text-secondary);
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
            display: block;
        }

        .detail-value {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--text-primary);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .booking-id {
            color: var(--neon-green);
            font-size: 1.5rem;
        }

        .highlight {
            color: var(--neon-purple);
        }

        /* Confirmation Message */
        .confirmation-message {
            background: linear-gradient(135deg, rgba(57, 255, 20, 0.1), rgba(0, 212, 255, 0.05));
            padding: 1.5rem;
            border-radius: 12px;
            border: 1px solid rgba(57, 255, 20, 0.2);
            margin-bottom: 2rem;
            text-align: center;
        }

            .confirmation-message p {
                font-size: 1.1rem;
                color: var(--text-primary);
                margin: 0;
            }

        .customer-name {
            color: var(--neon-green);
            font-weight: 700;
        }

        /* Action Buttons */
        .success-actions {
            display: flex;
            gap: 1rem;
            padding: 2rem 2.5rem;
            background: rgba(0, 0, 0, 0.2);
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .btn-back {
            flex: 1;
            background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
            color: var(--text-primary);
            box-shadow: 0 4px 15px rgba(0, 212, 255, 0.3);
        }

            .btn-back:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 25px rgba(0, 212, 255, 0.5);
            }

        /* No Booking Error */
        .error-container {
            text-align: center;
            padding: 3rem 2rem;
        }

        .error-icon {
            font-size: 5rem;
            margin-bottom: 1rem;
        }

        .error-message {
            font-size: 1.3rem;
            color: var(--text-secondary);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .success-container {
                padding: 0 1rem 3rem;
            }

            .success-title {
                font-size: 2rem;
            }

            .success-icon {
                width: 100px;
                height: 100px;
                font-size: 3rem;
            }

            .booking-details {
                padding: 2rem 1.5rem;
            }

            .details-grid {
                grid-template-columns: 1fr;
            }

            .success-actions {
                padding: 1.5rem;
            }
        }
    </style>
}

<!-- Sticky Navigation -->
<nav class="sticky-nav" id="navbar">
    <div class="nav-container">
        <div class="nav-logo">✈️ TravelHub</div>
        <ul class="nav-links">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Travel" asp-action="Index">Packages</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </div>
</nav>

<!-- Success Container -->
<div class="success-container">
    <div class="success-card">
        @if (booking != null)
        {
            <!-- Success Header -->
            <div class="success-icon-container">
                <div class="success-icon">✓</div>
                <h1 class="success-title">Booking Successful!</h1>
                <p class="success-subtitle">Your reservation has been confirmed</p>
            </div>

            <!-- Booking Details -->
            <div class="booking-details">
                <!-- Confirmation Message -->
                <div class="confirmation-message">
                    <p>Thank you, <span class="customer-name">@booking.CustomerName</span>, for booking with us!</p>
                </div>

                <!-- Details Section -->
                <div class="details-section">
                    <h3 class="section-header">Booking Information</h3>
                    <div class="details-grid">
                        <div class="detail-item">
                            <span class="detail-label">Booking ID</span>
                            <span class="detail-value booking-id">
                                @if (booking.BookingID > 0)
                                {
                                    <span>🎫</span>
                                    <span>@booking.BookingID</span>
                                }
                                else
                                {
                                    <span>⏳</span>
                                    <span>Pending</span>
                                }
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Package ID</span>
                            <span class="detail-value">
                                <span>📦</span>
                                <span>@booking.PackageID</span>
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Number of Travelers</span>
                            <span class="detail-value highlight">
                                <span>👥</span>
                                <span>@booking.NumberOfTravelers</span>
                            </span>
                        </div>

                        <div class="detail-item">
                            <span class="detail-label">Booking Date</span>
                            <span class="detail-value">
                                <span>📅</span>
                                <span>@booking.BookingDate.ToString("MMM dd, yyyy")</span>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Additional Info -->
                <div style="margin-top: 2rem; padding: 1.5rem; background: rgba(181, 55, 242, 0.05); border-radius: 12px; border: 1px solid rgba(181, 55, 242, 0.1);">
                    <p style="margin: 0; color: var(--text-secondary); line-height: 1.6;">
                        <strong style="color: var(--neon-purple);">📧 Confirmation Email:</strong>
                        A detailed confirmation email has been sent to your registered email address with your booking details and travel information.
                    </p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="success-actions">
                <a class="btn btn-back" asp-controller="Travel" asp-action="Index">
                    <span>🏠 Back to Packages</span>
                </a>
            </div>
        }
        else
        {
            <!-- Error State -->
            <div class="error-container">
                <div class="error-icon">❌</div>
                <p class="error-message">Booking details not available.</p>
                <div style="margin-top: 2rem;">
                    <a class="btn btn-back" asp-controller="Travel" asp-action="Index">
                        <span>Return to Packages</span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Sticky Navigation Scroll Effect
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Confetti Effect (Optional)
        document.addEventListener('DOMContentLoaded', function() {
            const successIcon = document.querySelector('.success-icon');
            if (successIcon) {
                // Add subtle rotation on load
                successIcon.style.transform = 'rotate(360deg)';
                successIcon.style.transition = 'transform 1s ease-out 0.5s';
            }

            // Animate detail items on load
            const detailItems = document.querySelectorAll('.detail-item');
            detailItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    item.style.transition = 'opacity 0.5s ease-out, transform 0.5s ease-out';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, 800 + (100 * index));
            });
        });
    </script>
}