@model List<MVC_Template.Models.Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Students";
}

<div class="container-fluid px-4 py-4">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                <div class="d-flex align-items-center">
                    <div class="bg-primary rounded-circle p-2 me-3">
                        <i class="bi bi-people-fill text-white fs-4"></i>
                    </div>
                    <div>
                        <h1 class="h3 mb-1 fw-bold text-dark">Student Management</h1>
                        <p class="text-muted mb-0 small">Manage your student records</p>
                    </div>
                </div>
                <a class="btn btn-primary btn-lg shadow-sm" asp-action="Create">
                    <i class="bi bi-plus-lg me-2"></i>Add New Student
                </a>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-lg">
        <div class="card-header bg-gradient bg-primary text-white border-0 py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-list-ul me-2"></i>All Students
                        <span class="badge bg-light text-primary ms-2">@(Model?.Count ?? 0)</span>
                    </h5>
                </div>
                <div class="col-md-6">
                    <form class="d-flex justify-content-end" method="get" asp-action="ListStudents">
                        <div class="input-group" style="max-width: 300px;">
                            <input class="form-control border-0 bg-white" 
                                   type="search" 
                                   name="q" 
                                   placeholder="Search students..." 
                                   aria-label="Search"
                                   value="@ViewData["SearchQuery"]" />
                            <button class="btn btn-light border-0 px-3" type="submit">
                                <i class="bi bi-search text-primary"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="card-body p-0">
            @if (Model == null || Model.Count == 0)
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="text-muted">No Students Found</h5>
                    <p class="text-muted mb-4">There are no students in the system yet.</p>
                    <a class="btn btn-primary" asp-action="Create">
                        <i class="bi bi-plus-lg me-1"></i>Add Your First Student
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light border-bottom">
                            <tr>
                                <th scope="col" class="border-0 py-3 ps-4">
                                    <span class="text-uppercase fw-semibold text-muted small">Student</span>
                                </th>
                                <th scope="col" class="border-0 py-3 text-center">
                                    <span class="text-uppercase fw-semibold text-muted small">Age</span>
                                </th>
                                <th scope="col" class="border-0 py-3 text-center">
                                    <span class="text-uppercase fw-semibold text-muted small">CGPA</span>
                                </th>
                                <th scope="col" class="border-0 py-3 text-center">
                                    <span class="text-uppercase fw-semibold text-muted small">Semester</span>
                                </th>
                                <th scope="col" class="border-0 py-3 text-end pe-4">
                                    <span class="text-uppercase fw-semibold text-muted small">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr class="student-row">
                                    <td class="py-3 ps-4 border-0">
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-circle me-3">
                                                <span class="avatar-text">
                                                    @(student.Name?.Substring(0, 1).ToUpperInvariant() ?? "?")
                                                </span>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark mb-1">@student.Name</div>
                                                <small class="text-muted">Student ID: @student.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3 text-center border-0">
                                        <span class="badge bg-light text-dark px-3 py-2">@student.Age years</span>
                                    </td>
                                    <td class="py-3 text-center border-0">
                                        <span class="badge @(student.CGPA >= 3.5 ? "bg-success" : student.CGPA >= 3.0 ? "bg-warning" : "bg-danger") px-3 py-2">
                                            @student.CGPA.ToString("F2")
                                        </span>
                                    </td>
                                    <td class="py-3 text-center border-0">
                                        <span class="badge bg-primary px-3 py-2">Semester @student.Semester</span>
                                    </td>
                                    <td class="py-3 text-end pe-4 border-0">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@student.Id" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@student.Id" title="Edit Student">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@student.Id" title="Delete Student">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        
        @if (Model != null && Model.Count > 0)
        {
            <div class="card-footer bg-light border-0 py-3">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <small class="text-muted fw-medium">
                            <i class="bi bi-info-circle me-1"></i>
                            Displaying <strong>@Model.Count</strong> student@(Model.Count != 1 ? "s" : "")
                        </small>
                    </div>
                    <div class="col-md-6 text-md-end mt-2 mt-md-0">
                        <div class="btn-group" role="group">
                            <a class="btn btn-outline-secondary btn-sm" asp-action="ListStudents" title="Refresh List">
                                <i class="bi bi-arrow-clockwise me-1"></i>Refresh
                            </a>
                            <button class="btn btn-outline-secondary btn-sm" onclick="window.print()" title="Print List">
                                <i class="bi bi-printer me-1"></i>Print
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Enhanced Professional Styling */
    .bg-gradient {
        background: linear-gradient(135deg, var(--bs-primary) 0%, #0056b3 100%);
    }
    
    .avatar-circle {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }
    
    .avatar-text {
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
    }
    
    .student-row {
        transition: all 0.2s ease;
        border-bottom: 1px solid #f8f9fa !important;
    }
    
    .student-row:hover {
        background-color: #f8f9fa;
        transform: translateY(-1px);
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }
    
    .student-row:last-child {
        border-bottom: none !important;
    }
    
    .btn-group .btn {
        border-radius: 6px;
        margin: 0 2px;
        transition: all 0.2s ease;
    }
    
    .btn-group .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }
    
    .card {
        border-radius: 12px;
        overflow: hidden;
    }
    
    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }
    
    .badge {
        font-weight: 500;
        border-radius: 8px;
    }
    
    .form-control:focus {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.1);
    }
    
    .shadow-lg {
        box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
    }
    
    /* Responsive improvements */
    @@media (max-width: 768px) {
        .btn-group {
            flex-direction: column;
            width: 100%;
        }
        
        .btn-group .btn {
            margin: 1px 0;
            border-radius: 4px;
        }
        
        .avatar-circle {
            width: 35px;
            height: 35px;
        }
        
        .avatar-text {
            font-size: 0.9rem;
        }
    }
    
    /* Print styles */
    @@media print {
        .btn, .card-footer {
            display: none !important;
        }
        
        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
        }
    }
</style>