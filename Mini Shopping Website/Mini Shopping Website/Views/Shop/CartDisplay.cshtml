@model List<Mini_Shopping_Website.Models.Product>
@{
    ViewData["Title"] = "Shopping Cart";
}
<h2>Your Shopping Cart</h2>
@if (Model == null || !Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <tr>
            <th>Name</th>
            <th>Price</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        }
    </table>
    
    <form method="post" action="/Shop/ClearCart">
        <button type="submit">Clear Cart</button>
    </form>
}