@using Identity_Authorization___AJAX_Interaction_in_MVC.Models
@model List<Booking>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Resource Name</th>
                <th>Type</th>
                <th>Location</th>
                <th>Booking Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in Model)
            {
                <tr>
                    <td>@b.ResourceName</td>
                    <td>@b.ResourceType</td>
                    <td>@b.ResourceLocation</td>
                    <td>@b.BookingDate.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@b.Status</td>
                    <td>
                        <button class="btn btn-success" onclick="approve(@b.Id)">Approve</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending booking requests.</p>
}

<script>
    function approve(id) {
        $.post('/Admin/Approve', { id: id }, function (html) {
            $('#pendingArea').html(html);
        });
    }
</script>
