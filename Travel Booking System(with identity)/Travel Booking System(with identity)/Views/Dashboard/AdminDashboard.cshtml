@model List<Travel_Booking_System_with_identity_.Models.Booking>

<h2>Admin Dashboard — All Bookings</h2>
<table border="1" cellpadding="6">
    <tr><th>BookingID</th><th>Package</th><th>User</th><th>Travellers</th><th>Total</th><th>Status</th><th>Actions</th></tr>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.BookingID</td>
            <td>@b.Package?.PackageName</td>
            <td>@b.Customer?.Email</td>
            <td>@b.NumberOfTravelers</td>
            <td>@b.TotalAmount.ToString("C")</td>
            <td>@b.BookingStatus</td>
            <td>
                <form asp-action="ChangeStatus" method="post" style="display:inline">
                    <input type="hidden" name="bookingId" value="@b.BookingID" />
                    <button name="status" value="Approved" type="submit">Approve</button>
                </form>
                <form asp-action="ChangeStatus" method="post" style="display:inline">
                    <input type="hidden" name="bookingId" value="@b.BookingID" />
                    <button name="status" value="Rejected" type="submit">Reject</button>
                </form>
            </td>
        </tr>
    }
</table>
