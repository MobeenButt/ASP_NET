@{
    ViewData["Title"] = "About Us";
}

@section Styles {
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/travel-packages.css" asp-append-version="true" />
    <style>
        .about-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem 4rem;
        }

        .about-hero {
            text-align: center;
            padding: 4rem 2rem;
            background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(181, 55, 242, 0.1));
            border-radius: 30px;
            margin-bottom: 4rem;
        }

            .about-hero h1 {
                font-size: 3.5rem;
                font-weight: 700;
                background: linear-gradient(135deg, var(--neon-blue), var(--neon-purple));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                margin-bottom: 1rem;
            }

            .about-hero p {
                font-size: 1.3rem;
                color: var(--text-secondary);
                max-width: 800px;
                margin: 0 auto;
                line-height: 1.8;
            }

        .story-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 3rem;
            margin-bottom: 4rem;
        }

        .story-content {
            background: var(--card-bg);
            padding: 3rem;
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.05);
        }

            .story-content h2 {
                font-size: 2rem;
                color: var(--neon-blue);
                margin-bottom: 1.5rem;
            }

            .story-content p {
                color: var(--text-secondary);
                line-height: 1.8;
                margin-bottom: 1rem;
            }

        .values-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }

        .value-card {
            background: var(--card-bg);
            padding: 2rem;
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            text-align: center;
            transition: var(--transition);
        }

            .value-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 60px rgba(0, 212, 255, 0.3);
            }

        .value-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .value-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--neon-purple);
            margin-bottom: 0.5rem;
        }

        .value-description {
            color: var(--text-secondary);
            line-height: 1.6;
        }

        @@media (max-width: 768px) {
            .story-section {
                grid-template-columns: 1fr;
            }

            .about-hero h1 {
                font-size: 2.5rem;
            }
        }
    </style>
}

<nav class="sticky-nav" id="navbar">
    <div class="nav-container">
        <div class="nav-logo">✈️ TravelHub</div>
        <ul class="nav-links">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Travel" asp-action="Index">Packages</a></li>
            <li><a asp-controller="Home" asp-action="About">About</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
        </ul>
    </div>
</nav>

<div class="about-container">
    <div class="about-hero">
        <h1>About TravelHub</h1>
        <p>We're passionate about creating unforgettable travel experiences that inspire, excite, and transform.</p>
    </div>

    <div class="story-section">
        <div class="story-content">
            <h2>🌟 Our Story</h2>
            <p>
                Founded with a vision to make world-class travel accessible to everyone, TravelHub has been connecting
                adventurers with their dream destinations for over a decade.
            </p>
            <p>
                What started as a small team of travel enthusiasts has grown into a leading platform trusted by thousands
                of travelers worldwide.
            </p>
        </div>

        <div class="story-content">
            <h2>🎯 Our Mission</h2>
            <p>
                To simplify travel planning and deliver exceptional experiences that create lasting memories. We believe
                travel should be accessible, affordable, and absolutely amazing.
            </p>
            <p>
                Every package we curate is designed with care, ensuring quality, value, and authentic experiences that
                go beyond typical tourism.
            </p>
        </div>
    </div>

    <h2 style="text-align: center; font-size: 2.5rem; color: var(--text-primary); margin-bottom: 2rem;">Our Core Values</h2>

    <div class="values-grid">
        <div class="value-card">
            <div class="value-icon">💎</div>
            <h3 class="value-title">Quality First</h3>
            <p class="value-description">We never compromise on the quality of our services and partnerships.</p>
        </div>

        <div class="value-card">
            <div class="value-icon">🤝</div>
            <h3 class="value-title">Customer Focus</h3>
            <p class="value-description">Your satisfaction and happiness are at the heart of everything we do.</p>
        </div>

        <div class="value-card">
            <div class="value-icon">🌱</div>
            <h3 class="value-title">Sustainability</h3>
            <p class="value-description">We promote responsible travel that respects local communities and environments.</p>
        </div>

        <div class="value-card">
            <div class="value-icon">✨</div>
            <h3 class="value-title">Innovation</h3>
            <p class="value-description">Continuously improving our platform to serve you better.</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.addEventListener('scroll', function() {
            const navbar = document.getElementById('navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    </script>
}